{
  "compilerOptions": {
    "types": ["cypress"],
    "lib": ["DOM", "ES2015"],
    "module": "es6",
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["./js/*"]
    }
  },
  "include": ["cypress/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
